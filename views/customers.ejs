<% include partials/header %>
		
<div class="container">
		<h1>Customers</h1>
	<div>
		<button class="btn btn-secondary"><a href="/customers/new">add new customer</a></button>	
	</div>
	<div class="col-lg-12 col-md-6">
		<% customers.forEach(function(customer){ %>
			<a class="btn btn-default" href="/customers/<%= customer._id %>" role="button" id="customer_detail">
		<div class="row">
			<div class="col-xs-4">
				<h3> <%= customer.firstName %> - <%= customer.lastName %> </h3>
				<h5> <%= customer.phone %> </h5>
				<h5> <%= customer.email %> </h5>
				<p> <%= customer.created.toDateString %> </p>
			</div>
		</div>	
			</a>
	
	<% }) %>
	</div>
	

</div>




<% include partials/footer %>