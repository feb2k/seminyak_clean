<% include partials/header %>



<div class="container" id="container_newcustomer">
	<div>
		<h1>Add more customer</h1>
	</div>
	<div class="col-lg-12 col-md-6">
		<div class="row">
				<form action="/customers" method="POST">
			<div class="form-inline" >
				<div class="form-group">
					<input class="form-control" type="text" name="customer[firstName]" placeholder="Nama depan">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="customer[lastName]" placeholder="Nama Belakang">
				</div>	
			</div>
			<div class="form-inline">
				<div class="form-group">
					<input class="form-control" type="text" name="customer[phone]" placeholder="No. Telepon">
				</div>
				<div class="form-group">
					<input class="form-control" type="email" name="customer[email]" placeholder="Email">	
				</div>		
			</div>
			<div class="form-inline">
				<div class="form-group">
					<input class="form-control" type="text" name="customer[address1]" placeholder="Alamat">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="customer[address2]" placeholder="Alamat tambahan">
				</div>	
			</div>
			<div class="form-inline">
				<div class="form-group">
					<input class="form-control" type="text" name="customer[district]" placeholder="Kecamatan">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="customer[subdistrict]" placeholder="Kelurahan">
				</div>	
			</div>
			<div class="form-inline">
				<div class="form-group">
					<input class="form-control" type="text" name="customer[village]" placeholder="Desa/RT/RW">
				</div>	
			</div>
			<input class="btn btn-primary" id="submit_button" type="submit">
		</form>
		</div>
		<a href="/customers">back to customer index</a>
	</div>
</div>

<% include partials/footer %>